<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidsaper">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".android.main.SaperApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".android.gui.GameActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".android.gui.LogInActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".android.gui.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".android.gui.GameSettingsActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".android.gui.MultiGameActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".android.gui.GameLevelSelection"
            android:label="@string/app_name" />
        <activity
            android:name=".android.gui.ChartActivity"
            android:label="@string/app_name" />
    </application>

</manifest>